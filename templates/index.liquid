{% block title %}{{ global.name }}{% endblock %}

{% block content %}

  <section id="intro" class="block intro">
    <h1 class="title"><span class="muted">Philly</span> Open Device Lab</h1> 
    <h2 class="lead">A free place in Philadelphia to test your website on a wide variety of devices.</p>
  </section>

  <section id="devices" class="block devices">
    <header class="block-header">
      <h1>Device Library</h1>
      <h2>Here's our current collection of {{ global.devices | size }} devies. We hope to have more soon.</h2>
    </header>
    <div class="block-body">
      <table class="devices-list">
        <thead>
          <tr>
            <th>Device</th>
            <th>OS</th>
            <th>Contributer</th>
          </tr>
          {% for device in global.devices %}
            <tr>
              <td>{{ device.brand }} {{ device.name }}</td>
              <td>{{ device.os }}</td>
              <td>
                {% if device.contributer.url %}
                  <a href="{{ device.contributer.url }}">{{ device.contributer.name }}</a>
                {% else %}
                  {{ device.contributer.name }}
                {% endif %}
              </td>
            </tr>
          {% endfor %}
      </table>
    </div>
  </section>
 
  <section id="visit" class="block visit">
    <header class="block-header">
      <h1>Visit The Lab</h1>
      <h2>1701 Walnut St<br> Philadelphia, PA 19103</h2>
      <a class="btn" href="/donate">Schedule A Visit</a>
    </header>
    <div class="block-body">
      <div id="map-canvas"></div>
    </div>
  </section>

  <section id="contribute" class="block contribute">
    <header class="block-header">
      <h1>Help Out</h1>
      <h2>Donate your old devices.</h2>
      <a class="btn" href="#">Donate Devices</a>
    </header>
    <div class="block-body">
      <form action="/">
        <fieldset>
          <legend>Contact</legend>
          <div class="form-group">
            <label for="contribute-name">Name</label>
            <div class="form-input">
              <input type="text" id="contribute-name" name="name" placeholder="Jim Lahey" required>
            </div>
          </div>
          <div class="form-group">
            <label for="contribute-email">Email</label>
            <div class="form-input">
              <input type="email" id="contribute-email" name="email" placeholder="jim.lahey@sunnyvale.ca">
            </div>
          </div>
          <div class="form-group">
            <label for="contribute-message">Message</label>
            <div class="form-input">
              <textarea id="contribute-message" name="email" placeholder="Yo, let me up in that shit."></textarea>
            </div>
          </div>
          <button class="btn">Send Message</button>
        </fieldset>
      </form>
    </div>
  </section>
  
{% endblock %}